{
  "cli": {
    "version": ">= 5.2.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "USE_DEMO_MODE": "false",
        "NODE_ENV": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "USE_DEMO_MODE": "false",
        "NODE_ENV": "production"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "OPENAI_API_KEY": "$OPENAI_API_KEY",
        "USE_DEMO_MODE": "false",
        "NODE_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "samet.3697@gmail.com",
        "ascAppId": "6747322474",
        "bundleIdentifier": "com.bookmate.reading.v2"
      }
    }
  }
}